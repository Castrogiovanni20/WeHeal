<?xml version="1.0" encoding="utf-8"?>

<!-- Layout obsoleto. Registro con credenciales deshabilitado  24/06/2020 -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <TextView
        android:id="@+id/textview_registro"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-condensed-light"
        android:paddingTop="0dp"
        android:text="Completá tus datos "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25dp"
        android:textStyle="italic"
        />
    <EditText
        android:id="@+id/input_usuario"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:hint="Usuario"
        android:fontFamily="sans-serif"
        android:inputType="text"
        android:paddingTop="20dp" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:hint="E-mail"
        android:fontFamily="sans-serif"
        android:inputType="textEmailAddress"
        android:paddingTop="20dp"
        />
    
    <EditText
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:hint="Contraseña"
        android:fontFamily="sans-serif"
        android:inputType="textPassword"
        android:paddingTop="20dp"
        android:layout_marginBottom="150dp"/>

    <Button
        android:id="@+id/boton_registrarse"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="#6200EE"
        android:drawableBottom="@color/colorPrimary"
        android:text="Crear cuenta"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/boton_crear_cuenta"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="10dp"
        android:gravity="center"
        android:text="@string/terminos_y_condiciones"
        android:fontFamily="sans-serif"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        />


</LinearLayout>




