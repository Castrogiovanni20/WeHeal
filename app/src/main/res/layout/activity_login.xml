<?xml version="1.0" encoding="utf-8"?>

<!-- Layout obsoleto. Login con credenciales deshabilitado  24/06/2020 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Login">

    <TextView
        android:id="@+id/texto_conectar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed-light"
        android:paddingTop="0dp"
        android:text="¡Hola! Para seguir, ingresá tu e-mail o usuario"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:hint="E-mail o usuario"
        android:fontFamily="sans-serif"
        android:paddingBottom="2dp" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:hint="Contraseña"
        android:fontFamily="sans-serif"
        android:inputType="textPassword"
        android:paddingBottom="2dp" />

    <TextView
        android:id="@+id/btpass"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:paddingBottom="100dp"
        android:textSize="15dp"
        android:gravity="center"
        android:text="¿Olvidaste tu contraseña?"
        android:fontFamily="sans-serif"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#6200EE" />

    <Button
        android:id="@+id/boton_iniciar_sesion"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="#6200EE"
        android:drawableBottom="@color/colorPrimary"
        android:text="Iniciar Sesion"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/boton_crear_cuenta"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15dp"
        android:gravity="center"
        android:text="Crear cuenta"
        android:fontFamily="sans-serif"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#6200EE" />

</LinearLayout>
