<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:context=".DatosSolicitante">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagenPerfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_profile"
        app:civ_border_width="1dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/nombre"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imagenPerfil"
        android:text="Doctor House"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:fontFamily="@font/nunito_bold"
        />

        <RelativeLayout
            android:id="@+id/buttonGroup"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/nombre"
            android:layout_centerInParent="true"
            android:gravity="center">

                <ImageButton
                    android:id="@+id/telefono"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circular_button"
                    android:src="@drawable/ic_phone"
                    />

                <ImageButton
                    android:id="@+id/contacto"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/telefono"
                    android:background="@drawable/circular_button"
                    android:src="@drawable/ic_contact"/>

                <ImageButton
                    android:id="@+id/email"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/contacto"
                    android:background="@drawable/circular_button"
                    android:src="@drawable/ic_email"
                    />

        </RelativeLayout>

    <Button
        android:id="@+id/entregeInsumo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="EntreguÃ© el insumo"
        android:textColor="@android:color/white"
        android:background="#6200EE"
        android:fontFamily="@font/nunito_bold"
        />



</RelativeLayout>